<!-- 5. Розбір синтаксису -->
<section style="font-size: 0.9em;">
	<h2>{{title}}</h2>
	<div style="margin: 30px 0;">
		<div style="background: rgba(10, 10, 15, 0.8); border: 2px solid var(--cyber-magenta); padding: 25px; font-family: 'Share Tech Mono', monospace; font-size: 1.38em;">
			<code style="color: var(--cyber-yellow);">{{{syntax}}}</code>
		</div>
	</div>
	{{#parts}}
	<div style="margin-top: 25px;">
		{{#parts}}
		<div style="margin-bottom: 12px;">
			<span style="color: {{color}}; font-family: 'Share Tech Mono', monospace; font-size: 1em;">{{part}}</span>
			<span style="color: var(--cyber-light); margin-left: 15px; font-size: 0.95em;">— {{{description}}}</span>
		</div>
		{{/parts}}
	</div>
	{{/parts}}
</section>
