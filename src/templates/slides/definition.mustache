<!-- 4. Ключове поняття / Визначення -->
<section>
	<h2>
		<svg width="32" height="32" viewBox="0 0 24 24" style="vertical-align: middle; margin-right: 12px;">
			<rect x="3" y="3" width="18" height="18" fill="none" stroke="#fcee0a" stroke-width="2"/>
			<rect x="7" y="7" width="4" height="4" fill="#00f0ff"/>
			<rect x="13" y="7" width="4" height="4" fill="#ff00ff"/>
			<rect x="7" y="13" width="10" height="2" fill="#fcee0a"/>
		</svg>
		{{title}}
	</h2>
	{{#term}}
	<div style="background: rgba(252, 238, 10, 0.1); border-left: 4px solid var(--cyber-yellow); padding: 20px; margin: 30px 0;">
		<h3 style="color: var(--cyber-yellow); margin-top: 0; display: flex; align-items: center; gap: 10px;">
			<svg width="24" height="24" viewBox="0 0 24 24">
				<rect x="4" y="4" width="16" height="16" fill="#fcee0a"/>
				<rect x="8" y="8" width="8" height="8" fill="#0a0a0f"/>
			</svg>
			{{term}}
		</h3>
		<p style="font-size: 1.1em; line-height: 1.6;">
			{{{definition}}}
		</p>
	</div>
	{{/term}}
	{{#analogy}}
	<div style="margin-top: 30px; padding: 15px; background: rgba(0, 240, 255, 0.05); border: 1px solid var(--cyber-cyan); display: flex; gap: 12px; align-items: start;">
		<svg width="28" height="28" viewBox="0 0 24 24" style="flex-shrink: 0; margin-top: 2px;">
			<circle cx="12" cy="12" r="9" fill="none" stroke="#00f0ff" stroke-width="2"/>
			<rect x="11" y="6" width="2" height="2" fill="#fcee0a"/>
			<path d="M10,10 L10,17 L14,17 L14,10 Z" fill="#00f0ff"/>
		</svg>
		<p style="color: var(--cyber-cyan); margin: 0;">
			<strong>Аналогія:</strong> {{{analogy}}}
		</p>
	</div>
	{{/analogy}}
</section>
