<!-- 12. Підсумок / Ключові висновки -->
<section>
	<h2 class="glitch" data-text="{{title}}">
		<svg width="32" height="32" viewBox="0 0 24 24" style="vertical-align: middle; margin-right: 12px;">
			<rect x="3" y="3" width="8" height="8" fill="#fcee0a"/>
			<rect x="13" y="3" width="8" height="8" fill="#00f0ff"/>
			<rect x="3" y="13" width="8" height="8" fill="#ff00ff"/>
			<rect x="13" y="13" width="8" height="8" fill="#fcee0a"/>
		</svg>
		{{title}}
	</h2>
	<div style="margin-top: 50px;">
		<ul style="list-style: none; font-size: 1.15em; line-height: 2.2; padding-left: 0;">
			{{#items}}
			<li class="fragment highlight-cyber" style="display: flex; align-items: center; gap: 15px; margin-bottom: 15px;">
				<svg width="24" height="24" viewBox="0 0 24 24" style="flex-shrink: 0;">
					<polygon points="12,2 15,9 22,10 17,15 18,22 12,18 6,22 7,15 2,10 9,9" fill="#fcee0a"/>
				</svg>
				<span>{{{.}}}</span>
			</li>
			{{/items}}
		</ul>
	</div>
	{{#note}}
	<p style="margin-top: 50px; text-align: center; color: var(--cyber-cyan); font-size: 1.1em; display: flex; align-items: center; justify-content: center; gap: 10px;">
		<svg width="24" height="24" viewBox="0 0 24 24">
			<rect x="4" y="8" width="3" height="8" fill="#00f0ff"/>
			<rect x="10" y="6" width="3" height="10" fill="#fcee0a"/>
			<rect x="16" y="4" width="3" height="12" fill="#ff00ff"/>
		</svg>
		<em>{{{note}}}</em>
		<svg width="24" height="24" viewBox="0 0 24 24">
			<rect x="4" y="8" width="3" height="8" fill="#ff00ff"/>
			<rect x="10" y="6" width="3" height="10" fill="#fcee0a"/>
			<rect x="16" y="4" width="3" height="12" fill="#00f0ff"/>
		</svg>
	</p>
	{{/note}}
</section>
