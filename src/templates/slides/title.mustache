<!-- 1. Титульний слайд -->
<section>
  <h1 class="glitch" data-text="{{title}}">{{title}}</h1>
  <h2>{{subtitle}}</h2>
  {{#module}}
  <p style="margin-top: 30px; color: var(--cyber-magenta)">
    <strong>{{module}}</strong>
  </p>
  {{/module}}
  <p style="margin-top: 20px; color: var(--cyber-yellow)">
    <strong>{{course}}</strong>
  </p>
  {{#instructor}}
  <p style="color: var(--cyber-cyan); margin-top: 15px">
    <em>{{instructor}}</em>
  </p>
  {{/instructor}} {{#institution}}
  <p style="color: var(--cyber-cyan)">
    <em>{{institution}}</em>
  </p>
  {{/institution}} {{#date}}
  <p style="color: var(--cyber-light); opacity: 0.7; margin-top: 15px">{{date}}</p>
  {{/date}}
</section>
